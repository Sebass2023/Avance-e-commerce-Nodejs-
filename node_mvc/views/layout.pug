html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        //fuentesiconos
        script(src="https://kit.fontawesome.com/7093e8d830.js" crossorigin="anonymous")

        //estilos CSS
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/css/style.css")
        link(rel="stylesheet", href="/css/all.min.css")

        //JavaScript
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")

        title GYMFIT

    header.Header 
        div(class=Pagina == 'Index' ? 'Index ContenedorHeader': '')
            .Barra.BarraInicio 
                a(href='/')
                    h1 GYMFIT
                nav.Nav 
                    if(locals.usuario._id)
                        include partials/nav-autenticado.pug 
                    else
                        include partials/nav-noautenticado.pug 

            if(Pagina == 'Index')
                h4.Titulo Los mejores productos para entrenar!

    if(locals.mensajes)
        .Alertas 
            each Categoria in Object.keys(locals.mensajes)
                each alerta in locals.mensajes[Categoria]
                    .alerta(class=Categoria)
                        p= alerta

    body 
        block contenido
    footer 
        p -- GYMFIT --
    script(src=("/dist/bundle.js"))
